<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base_actionbar_bg"
    android:padding="2dip" >

    <ImageButton
        android:id="@+id/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/divider_left"
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/menu_btn"
        android:background="#db2202" />

    <View
        android:id="@+id/divider_right"
        android:layout_width="0.5dip"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/divider_left"
        android:background="#b00700" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/divider_right"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/personal_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/base_main_action_personal" />

</RelativeLayout>